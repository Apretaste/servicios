<div class="row">
	<div class="col s12 center-align">
		<p>Escoja un servicio para comenzar</p>
	</div>
</div>

<div class="row">
	<div class="col s12 input-field">
		<select id="filter" onchange="filter(value)">
			<option value="">Todo</option>
			<% categories.forEach(function(item){ %>
				<option value="<%= item %>"><%= item %></option>
			<% }) %>
		</select>
	</div>
</div>

<div class="row">
	<% services.forEach(function(item){ %>
		<div class="col s4 m2 center-align service <%= item.category %>">
			<div class="card" style="padding:1rem">
				<a href="#" class="green-text apretaste" onclick="apretaste.send({command:'<%= item.name %>'})">
					<img src="{{APP_IMAGE_PATH}}<%= item.name.toLowerCase() %>.png" alt="<%= item.name %>" width="100%">
					<%= item.name %>
				</a>
			</div>
		</div>
	<% }) %>
</div>